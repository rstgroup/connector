<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.rstit.connector.ui.chat.ChatMyMessageRowViewModel"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:gravity="end"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padding_small"
        android:paddingEnd="@dimen/padding_default"
        android:paddingStart="@dimen/padding_xxxlarge"
        android:paddingTop="@dimen/padding_small">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_chat_my"
            android:gravity="center_vertical"
            android:minHeight="@dimen/chat_avatar_size"
            android:text="@{model.content}"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_large"
            tools:text="Text message"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{model.time}"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/font_xsmall"
            tools:text="16:23"/>
    </LinearLayout>
</layout>